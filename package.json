{
  "name": "Whistle",
  "version": "1.5.5",
  "description": "Whistle Web Debugging Proxy",
  "main": "./lib/index.js",
  "author": "avenwu <avwu@qq.com>",
  "scripts": {
    "start": "electron ./lib",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --host 127.0.0.1 --port 5173 --strictPort",
    "dev:electron": "wait-on tcp:127.0.0.1:5173 && electron ./lib",
    "build:react": "vite build",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:win": "npm run build:react && electron-builder --win --x64",
    "build:linux": "npm run build:react && electron-builder --linux",
    "release:win": "npm run build:react && electron-builder --win --x64 -p always",
    "release:mac": "npm run build:react && electron-builder --mac --linux -p always",
    "release:linux": "npm run build:react && electron-builder --linux -p always",
    "lint": "eslint --fix lib",
    "lintfix": "npm run lint"
  },
  "build": {
    "productName": "Whistle",
    "appId": "whistle.client",
    "asar": false,
    "artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
    "copyright": "avenwu",
    "compression": "normal",
    "extends": null,
    "publish": [
      {
        "provider": "github",
        "owner": "avwo",
        "repo": "whistle-client",
        "releaseType": "draft"
      }
    ],
    "protocols": [
      {
        "name": "whistle",
        "schemes": [
          "whistle"
        ]
      }
    ],
    "mac": {
      "icon": "public/dock.png",
      "extendInfo": {
        "LSUIElement": true
      },
      "target": {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "win": {
      "icon": "public/whistle.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/whistle.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "runAfterFinish": true,
      "allowToChangeInstallationDirectory": true,
      "include": "installer.nsh"
    }
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "electron": "^39.1.2",
    "electron-builder": "^24.4.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@pikoloo/darwin-ui": "^2.0.0",
    "electron-context-menu": "^3.6.1",
    "framer-motion": "^12.30.1",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.563.0",
    "npminstall": "^7.9.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sudo-prompt": "^9.2.1",
    "whistle": "^2.9.109",
    "whistle.proxyauth": "^1.1.5"
  }
}
